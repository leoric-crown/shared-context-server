# Docker-specific environment configuration
# Copy this to .env for Docker Compose deployment

# =============================================================================
# SECURITY (REQUIRED)
# =============================================================================
# Generate with: openssl rand -base64 32
API_KEY=your-secure-api-key-replace-this-in-production

# Generate with: openssl rand -base64 32
JWT_SECRET_KEY=your-secure-jwt-secret-replace-this-in-production

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HTTP_PORT=23456
LOG_LEVEL=INFO
ENVIRONMENT=production
DEBUG=false

# Client-accessible hostname (for MCP client configuration)
# This is the hostname that MCP clients should use to connect to the server
# Usually 'localhost' for local development, or your server's public hostname/IP for remote access
MCP_CLIENT_HOST=localhost

# CORS Settings (adjust for your needs)
CORS_ORIGINS=*

# =============================================================================
# DOCKER-SPECIFIC SETTINGS
# =============================================================================
# These paths work with the Docker volume mounts
DATABASE_PATH=/app/data/chat_history.db

# Resource limits (adjust based on your needs)
MAX_SESSIONS_PER_AGENT=100
MAX_MESSAGES_PER_SESSION=10000
MAX_MEMORY_ENTRIES_PER_AGENT=2000
MAX_MEMORY_SIZE_MB=200

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Automatic cleanup
ENABLE_AUTOMATIC_CLEANUP=true
CLEANUP_INTERVAL=3600
